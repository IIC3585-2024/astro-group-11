---
interface Props {
	session: any;
	id: number;
	name: string;
	services: {};
	seasons: {};
	description: string;
	categories: {};
	stars: number;
	n_califications: number;
}

const { session, id, image, name, services, seasons, description, categories, stars, n_califications } = Astro.props;
---

<a href={`/serie/${id}`}>
	<div class="card" onclick="window.location.href = `/serie/${id}`">
		<img src=`/images/${image}` alt="Imagen de la serie" class="serie-img">
		<h3>{name}</h3>
		<div class="details">
			<p><span>Estrellas:</span> {stars} ({n_califications})</p>
		</div>
	</div>
</a>

<style>	
	.card {
    background-color: #333;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: 12px;
    max-width: 300px;
		max-height: 380px;
    margin: 16px;
		pointer: cursor;
    transition: transform 0.2s ease;
  }
	
	.card:hover {
    transform: scale(1.05); /* Aumenta la escala al 105% del tama√±o original */
  }

.card h3 {
  font-size: 1.2rem;
  margin-bottom: 8px;
}

.card p {
  font-size: 1rem;
  line-height: 1.4;
}

.card .details {
  margin-top: 12px;
}

.card .details span {
  font-weight: bold;
}

.card .buttons {
  margin-top: 12px;
}

.card .buttons button {
  padding: 8px 16px;
  border: none;
  background-color: #007bff;
  color: white;
  cursor: pointer;
  border-radius: 4px;
}

.card .buttons button:hover {
  background-color: #0056b3;
}
.serie-img {
	max-width: 100%;
	height: auto;
	display: block;
	margin: 0 auto;
}
a {
    text-decoration: none;
    color: inherit;
    display: inline-block;
  }

</style>
