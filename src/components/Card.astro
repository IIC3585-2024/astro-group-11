}

.card .buttons {
  margin-top: 12px;
}

.card .buttons button {
  padding: 8px 16px;
  border: none;
  background-color: #007bff;
  color: white;
  cursor: pointer;
  border-radius: 4px;
}

.card .buttons button:hover {
