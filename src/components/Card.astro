<style>	
	.card {
    background-color: #333;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: 12px;
    max-width: 300px;
    margin: 16px;
  }

.card h3 {
  font-size: 1.2rem;
  margin-bottom: 8px;
}

.card p {
  font-size: 1rem;
  line-height: 1.4;
}

.card .details {
  margin-top: 12px;
}

.card .details span {
